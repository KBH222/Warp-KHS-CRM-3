{
  "name": "khs-crm",
  "version": "1.0.0",
  "private": true,
  "description": "KHS Construction & Remodeling CRM - Mobile-first field operations platform",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "cd frontend && npm run build",
    "build:vercel": "cd frontend && npm install && npm run build",
    "build:shared": "echo 'Shared build skipped - no longer needed'",
    "build:backend": "echo 'Backend build skipped'",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:seed": "npm run db:seed --workspace=backend"
  },
  "dependencies": {
    "@vercel/node": "^3.0.0",
    "@prisma/client": "^5.22.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prisma": "^5.22.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}